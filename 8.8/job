冒泡
void bubble(int* a,int i )
for(j=0;j<i;j++)
	{
		for(l=0;l<i-1;l++)
		{
			if(a[l]>a[l+1])
			{
				a[l]=a[l]+a[l+1];
				a[l+1]=a[l]-a[l+1];
				a[l]=a[l]-a[l+1];
			}
		}	
	}
选择
void slect(int* a,int i)
int j,min;
for(j=0;j<i-1;j++)
	{
		min=j;
		for(l=j;l<i;l++)
		{
			if(a[min]>a[l])
			{
				min=l;
			}
		}
		if(min!=j)
		{
			b=a[min];
			a[min]=a[j];	
			a[j]=b;
		}



	}

